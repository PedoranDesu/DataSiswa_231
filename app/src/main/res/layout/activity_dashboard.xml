<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Dashboard">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/student1"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btnLihat"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        app:layout_constraintTop_toBottomOf="@id/icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#ff5959"
        android:text="Lihat Data"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/iconview"
        android:src="@drawable/ic_add_box_black_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/btnLihat"
        app:layout_constraintLeft_toLeftOf="@id/btnLihat"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/btnLihat"
        />


    <ImageView
        android:id="@+id/iconadd"
        android:src="@drawable/ic_archive_black_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/btnInput"
        app:layout_constraintLeft_toLeftOf="@id/btnInput"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/btnInput"
        />

    <Button
        android:id="@+id/btnInput"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/btnLihat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#03A9F4"
        android:text="Input Data"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />


    <ImageView
        android:id="@+id/iconinfo"
        android:src="@drawable/ic_info_black_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/btnInfo"
        app:layout_constraintLeft_toLeftOf="@id/btnLihat"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/btnInfo"
        />

    <Button
        android:id="@+id/btnInfo"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        app:layout_constraintTop_toBottomOf="@id/btnInput"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#FF9800"
        android:text="Informasi"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>